<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_bg"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <TextView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Add Contact"
            android:gravity="center|start"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_dialog_multi_contact_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_11sdp"
            android:hint="Enter Contact Name"
            android:gravity="center|start"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_3sdp"/>

        <EditText
            android:id="@+id/et_dialog_multi_contact_phno"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:hint="Enter Contact Number"
            android:gravity="center|start"
            android:inputType="number"
            android:textSize="@dimen/_11sdp"
            android:maxLength="10"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_3sdp"/>

        <EditText
            android:id="@+id/et_dialog_multi_contact_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:hint="Enter Email"
            android:textSize="@dimen/_11sdp"
            android:gravity="center|start"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_3sdp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dialog_multi_contact_anniv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:hint="Enter Date of Anniversary "
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:paddingStart="@dimen/_2sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray_50"
                android:layout_gravity="bottom"
                android:paddingStart="@dimen/_2sdp"/>

        </FrameLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_dialog_multi_contact_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_add"
            app:fabSize="normal" />

    </LinearLayout>

</androidx.cardview.widget.CardView>